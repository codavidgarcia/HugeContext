---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-[var(--bg-primary)]/80 border-b border-[var(--border-subtle)]">
  <div class="container-hc">
    <nav class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <img
          data-theme-logo
          data-dark-src="/HugeContext-Dark.png"
          data-light-src="/HugeContext-Light.png"
          src="/HugeContext-Dark.png"
          alt="HugeContext"
          class="h-8 md:h-9 w-auto transition-transform group-hover:scale-105"
        />
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#features" class="text-body font-medium text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors">
          Features
        </a>
        <a href="#how-it-works" class="text-body font-medium text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors">
          How it works
        </a>
        <a href="#compatibility" class="text-body font-medium text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors">
          Compatibility
        </a>
        <a 
          href="https://github.com" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-body font-medium text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors flex items-center gap-1.5"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          GitHub
        </a>
      </div>
      
      <!-- Actions -->
      <div class="flex items-center gap-3">
        <ThemeToggle />
        <a href="https://marketplace.visualstudio.com/items?itemName=codavidgarcia.hugecontext" class="btn-primary hidden sm:inline-flex">
          Install Extension
        </a>
        
        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          type="button"
          class="md:hidden flex items-center justify-center w-10 h-10 rounded-lg text-[var(--text-primary)] hover:bg-[var(--accent-muted)] transition-colors"
          aria-label="Open menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </nav>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-[var(--border-subtle)]">
    <div class="container-hc py-4 flex flex-col gap-4">
      <a href="#features" class="text-body font-medium text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors py-2">
        Features
      </a>
      <a href="#how-it-works" class="text-body font-medium text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors py-2">
        How it works
      </a>
      <a href="#compatibility" class="text-body font-medium text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors py-2">
        Compatibility
      </a>
      <a 
        href="https://github.com" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-body font-medium text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors py-2 flex items-center gap-1.5"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
        GitHub
      </a>
      <a href="https://marketplace.visualstudio.com/items?itemName=codavidgarcia.hugecontext" class="btn-primary text-center mt-2">
        Install Extension
      </a>
    </div>
  </div>
</header>

<script>
  function initMobileMenu() {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    
    if (!button || !menu) return;
    
    button.addEventListener('click', () => {
      const isOpen = !menu.classList.contains('hidden');
      menu.classList.toggle('hidden', isOpen);
      button.setAttribute('aria-expanded', String(!isOpen));
    });
    
    // Close menu when clicking a link
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
        button.setAttribute('aria-expanded', 'false');
      });
    });
  }
  
  initMobileMenu();
  document.addEventListener('astro:after-swap', initMobileMenu);
</script>
