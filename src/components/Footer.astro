---
// Footer Component
---

<footer class="py-12 border-t border-[var(--border-subtle)]">
  <div class="container-hc">
    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
      <!-- Logo & Copyright -->
      <div class="flex flex-col items-center md:items-start gap-4">
        <a href="/" class="flex items-center gap-3">
          <img
            data-theme-logo
            data-dark-src="/HugeContext-Dark.png"
            data-light-src="/HugeContext-Light.png"
            src="/HugeContext-Dark.png"
            alt="HugeContext"
            class="h-7 w-auto opacity-80 hover:opacity-100 transition-opacity"
          />
        </a>
        <p class="text-caption text-[var(--text-muted)]">
          Created by J. David Garcia
        </p>
      </div>
      
      <!-- Links -->
      <div class="flex items-center gap-8">
        <a 
          href="https://github.com" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-body text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors"
        >
          GitHub
        </a>
        <a 
          href="#"
          class="text-body text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors"
        >
          Documentation
        </a>
        <a 
          href="#"
          class="text-body text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors"
        >
          License
        </a>
      </div>
      
      <!-- Social / External Links -->
      <div class="flex items-center gap-4">
        <a 
          href="https://github.com" 
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center justify-center w-10 h-10 rounded-lg text-[var(--text-muted)] hover:text-[var(--text-primary)] hover:bg-[var(--accent-muted)] transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
        <a 
          href="https://modelcontextprotocol.io/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center justify-center w-10 h-10 rounded-lg text-[var(--text-muted)] hover:text-[var(--text-primary)] hover:bg-[var(--accent-muted)] transition-colors"
          aria-label="MCP Protocol"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m9.193-9.193a4.5 4.5 0 00-6.364 0l-4.5 4.5a4.5 4.5 0 106.364 6.364l1.757-1.757" />
          </svg>
        </a>
      </div>
    </div>
    
    <!-- Bottom bar -->
    <div class="mt-8 pt-8 border-t border-[var(--border-subtle)] text-center">
      <p class="text-caption text-[var(--text-muted)]">
        Free for personal and internal business use. See license for details.
      </p>
    </div>
  </div>
</footer>

<script>
  // Update footer logo on theme change
  function updateFooterLogo() {
    const theme = document.documentElement.getAttribute('data-theme');
    document.querySelectorAll('footer [data-theme-logo]').forEach((img) => {
      const imgEl = img as HTMLImageElement;
      const darkSrc = imgEl.getAttribute('data-dark-src');
      const lightSrc = imgEl.getAttribute('data-light-src');
      if (darkSrc && lightSrc) {
        imgEl.src = theme === 'dark' ? darkSrc : lightSrc;
      }
    });
  }
  
  // Initial update
  updateFooterLogo();
  
  // Listen for theme changes
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.attributeName === 'data-theme') {
        updateFooterLogo();
      }
    });
  });
  
  observer.observe(document.documentElement, { attributes: true });
</script>
